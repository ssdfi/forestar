<h5>Plantación Cortina</h5>
<table id="actividades-certificadas-cortina" class="table table-responsive table-striped">
	<thead>
		<tr>
			<th>Actividad</th>
			<th>Especie</th>
      <th>Fecha Realización</th>
			<th>Longitud Filas</th>
      <th>Numero de Filas</th>
      <th>Distancia entre Plantas</th>
      <th>Cantidad de Arboles</th>
      <th>Superficie Equivalente</th>
      <th>Riego</th>
      <th>Turno Corta</th>
			<th>Observaciones</th>
			<th></th>
		</tr>
	</thead>
	<tbody
		class="actividadesCertificadas_cortina">
		{% if actividadesCertificadas %}
			{% for tag in actividadesCertificadas %}
				{# PLANTACION CORTINA #}
				{% if tag.tipoActividad.vars.data.id == 6 %}
        <tr class="fields">
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.tipoActividad) }}
              {{ form_errors(tag.tipoActividad) }}
            </div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.especie) }}
              {{ form_errors(tag.especie) }}
            </div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.fechaInicio) }}
              {{ form_errors(tag.fechaInicio) }}
            </div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.longitudFilas) }}
              {{ form_errors(tag.longitudFilas) }}
            </div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.numeroFilas) }}
              {{ form_errors(tag.numeroFilas) }}
            </div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.distanciaPlantas) }}
              {{ form_errors(tag.distanciaPlantas) }}
            </div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.cantidadArboles) }}
              {{ form_errors(tag.cantidadArboles) }}
            </div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.superficieHa) }}
              {{ form_errors(tag.superficieHa) }}
            </div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.riego) }}
              {{ form_errors(tag.riego) }}
            </div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.turnoCorta) }}
              {{ form_errors(tag.turnoCorta) }}
            </div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.observaciones) }}
              {{ form_errors(tag.observaciones) }}
            </div>
          </td>
          {% do tag.edadPlantacion.setRendered() %}
          {% do tag.dapPromedio.setRendered() %}
          {% do tag.densidadPrevia.setRendered() %}
          {% do tag.numeroArbolesExtraidos.setRendered() %}
          {% do tag.alturaPoda.setRendered() %}
					{% do tag.alturaPromedioPlantacion.setRendered() %}
					{% do tag.cantidadArbolesPodados.setRendered() %}
					{% do tag.numeroPoda.setRendered() %}
          {% do tag.porcentajeFallas.setRendered() %}
					{% do tag.densidad.setRendered() %}
          {% do tag.edadCepa.setRendered() %}
          {% do tag.edadRebrote.setRendered() %}
          {% do tag.numeroBrotesCepas.setRendered() %}
          <td>
            <a class="btn btn-danger btn-sm pull-right remove-actividad-certificada remove_nested_fields" data-association="actividades_certificadas">
              <span class="fa fa-remove text-white" aria-hidden="true"></span>
            </a>
          </td>
        </tr>
				{% endif %}
			{% endfor %}
		{% endif %}
	</tbody>
</table>
