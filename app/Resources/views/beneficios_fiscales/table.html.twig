<div class="table-responsive">
  <table id="beneficios-fiscales" class="table table-striped">
    <thead>
      <tr>
        <th>Tipo Beneficio</th>
        <th>Valor Plantación</th>
        <th>Número de Certificado</th>
        <th>Inicio Período Plantación</th>
        <th>Fin Período Plantación</th>
        <th>Inicio Período Fiscal</th>
        <th>Fin Período Fiscal</th>
        <th>Fecha Emisión</th>
        <th>Impuesto</th>
        <th>Volumen</th>
        <th>Valor Beneficio</th>
        <th>Moneda</th>
        <th>Contiene Certificado</th>
        <th>Observaciones</th>
        <th></th>
      </tr>
    </thead>
    <tbody class="beneficiosFiscales" data-index="{{ beneficiosFiscales|length }}" data-prototype="{% filter escape %}{% include 'beneficios_fiscales/prototype.html.twig' with {'form': beneficiosFiscales.vars.prototype } %}{% endfilter %}">
      {% if beneficiosFiscales %}
        {% for tag in beneficiosFiscales %}
        <tr class="fields">
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.beneficioFiscal) }}
              {{ form_errors(tag.beneficioFiscal) }}
            </div>
          </td>
          <td>
          		<div class="col-sm-12">
          			{{ form_widget(tag.valorPlantacion) }}
                {{ form_errors(tag.valorPlantacion) }}
          		</div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.numeroCertificado) }}
              {{ form_errors(tag.numeroCertificado) }}
            </div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.inicioPeriodoPlantacion) }}
              {{ form_errors(tag.inicioPeriodoPlantacion) }}
            </div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.finPeriodoPlantacion) }}
              {{ form_errors(tag.finPeriodoPlantacion) }}
            </div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.inicioPeriodoFiscal) }}
              {{ form_errors(tag.inicioPeriodoFiscal) }}
            </div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.finPeriodoFiscal) }}
              {{ form_errors(tag.finPeriodoFiscal) }}
            </div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.fechaEmision) }}
              {{ form_errors(tag.fechaEmision) }}
            </div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.impuesto) }}
              {{ form_errors(tag.impuesto) }}
            </div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.volumen) }}
              {{ form_errors(tag.volumen) }}
            </div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.valorBeneficio) }}
              {{ form_errors(tag.valorBeneficio) }}
            </div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.moneda) }}
              {{ form_errors(tag.moneda) }}
            </div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.contieneCertificado) }}
              {{ form_errors(tag.contieneCertificado) }}
            </div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_widget(tag.observaciones) }}
              {{ form_errors(tag.observaciones) }}
            </div>
          </td>
          <td>
          	<a class="btn btn-danger btn-sm pull-right remove-beneficio-fiscal remove_nested_fields" data-association="beneficios_fiscales">
              <span class="fa fa-remove text-white" aria-hidden="true"></span>
          	</a>
          </td>
        </tr>
      {% endfor %}
    {% endif %}
    </tbody>
  </table>
  <a id="add-beneficio-fiscal" class="btn btn-primary btn-sm add_nested_fields" data-target="#beneficio-fiscal" href="javascript:void(0)">
    <span class="fa fa-plus" aria-hidden="true"></span>
    Agregar Beneficio Fiscal
  </a>
</div>

{% block javascripts %}
  <script src="{{ asset('js/beneficios_fiscales.js') }}"></script>
{% endblock %}
