{% if actividadesInspeccionadas %}
	{% for tag in actividadesInspeccionadas %}
		{# RALEO #}
		{% if tag.tipoActividad.vars.data.id == 3 %}
			<tr class="fields">
				<td>
					<div class="col-sm-12">
						{{ form_widget(tag.tipoActividad) }}
						{{ form_errors(tag.tipoActividad) }}
					</div>
				</td>
				<td>
					<div class="col-sm-12">
						{{ form_widget(tag.especie) }}
						{{ form_errors(tag.especie) }}
					</div>
				</td>
				<td>
					<div class="col-sm-12">
						{{ form_widget(tag.fechaInspeccion) }}
						{{ form_errors(tag.fechaInspeccion) }}
					</div>
				</td>
				<td>
					<div class="col-sm-12">
						{{ form_widget(tag.superficieHa) }}
						{{ form_errors(tag.superficieHa) }}
					</div>
				</td>
				<td>
					<div class="col-sm-12">
						{{ form_widget(tag.edadPlantacion) }}
						{{ form_errors(tag.edadPlantacion) }}
					</div>
				</td>
				<td>
					<div class="col-sm-12">
						{{ form_widget(tag.dapPromedio) }}
						{{ form_errors(tag.dapPromedio) }}
					</div>
				</td>
				<td>
					<div class="col-sm-12">
						{{ form_widget(tag.densidadPrevia) }}
						{{ form_errors(tag.densidadPrevia) }}
					</div>
				</td>
				<td>
					<div class="col-sm-12">
						{{ form_widget(tag.numeroArbolesExtraidos) }}
						{{ form_errors(tag.numeroArbolesExtraidos) }}
					</div>
				</td>
				<td>
					<div class="col-sm-12">
						{{ form_widget(tag.densidad) }}
						{{ form_errors(tag.densidad) }}
					</div>
				</td>
				<td>
					<div class="col-sm-12">
						{{ form_widget(tag.responsable) }}
						{{ form_errors(tag.responsable) }}
					</div>
				</td>
				<td>
					<div class="col-sm-12">
						{{ form_widget(tag.tipoInspeccion) }}
						{{ form_errors(tag.tipoInspeccion) }}
					</div>
				</td>
				<td>
					<div class="col-sm-12">
						{{ form_widget(tag.tecnico) }}
						{{ form_errors(tag.tecnico) }}
					</div>
				</td>
				<td>
					<div class="col-sm-12">
						{{ form_widget(tag.observacion) }}
						{{ form_errors(tag.observacion) }}
					</div>
				</td>
				{% do
					tag.alturaPoda.setRendered() %}
				{% do
					tag.alturaPromedioPlantacion.setRendered() %}
				{% do
					tag.cantidadArbolesPodados.setRendered() %}
				{% do
					tag.numeroPoda.setRendered() %}
				{% do
					tag.porcentajeFallas.setRendered() %}
				{% do
					tag.turnoCorta.setRendered() %}
				{% do
					tag.riego.setRendered() %}
				{% do
					tag.edadCepa.setRendered() %}
				{% do
					tag.edadRebrote.setRendered() %}
				{% do
					tag.numeroBrotesCepas.setRendered() %}
				{% do
					tag.longitudFilas.setRendered() %}
				{% do
					tag.numeroFilas.setRendered() %}
				{% do
					tag.distanciaPlantas.setRendered() %}
				{% do
					tag.cantidadArboles.setRendered() %}
				<td>
					<a class="btn btn-danger btn-sm pull-right remove-actividad-inspeccionada remove_nested_fields" data-association="actividades_inspeccionadas">
						<span class="fa fa-remove text-white" aria-hidden="true"></span>
					</a>
				</td>
			</tr>
		{% endif %}
	{% endfor %}
{% endif %}
