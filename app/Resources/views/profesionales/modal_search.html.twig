{% extends 'javascripts.html.twig' %}
{% block content %}
  <div id="profesionales-modal" tabindex="-1" class="modal fade" role="dialog" data-dismiss="modal">
  	<div class="modal-dialog modal-lg">
  		<div class="modal-content">
  			<div class="modal-header">
  				<h5 class="modal-title" id="profesionales-modal-label">Asociar Profesional a Expediente</h5>
  				<button type="button" class="close" data-dismiss="modal">
  					<span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
  			</div>
  			<div class="modal-body">
  				<div class="row">
  					<div class="col-md-12">
  						<form action="{{path('profesionales_search')}}" class="form-inline" data-remote="true" method="get" role="form">
  							<div style="display:none"></div>
                <div class="form-group mx-sm-3 mb-2">
                  <label for="inputPassword2" class="sr-only" for="profesional[apellido_nombre]">profesional[apellido_nombre]</label>
                  <input class="form-control" id="profesional[apellido_nombre]" name="profesional[apellido_nombre]" placeholder="Apellido y Nombre" type="text">
                </div>
                <div class="form-group mx-sm-3 mb-2">
                  <label for="inputPassword2" class="sr-only" for="profesional[documento]">profesional[documento]</label>
                  <input class="form-control" id="profesional[documento]" name="profesional[documento]" placeholder="DNI" type="text">
                </div>
                <div class="form-group mx-sm-3 mb-2">
                  <label for="inputPassword2" class="sr-only" for="profesional[cuit]">profesional[cuit]</label>
                  <input class="form-control" id="profesional[cuit]" name="profesional[cuit]" placeholder="CUIT" type="text">
                </div>
                <div class="form-group mx-sm-3 mb-2">
                  <input class="btn btn-secondary" id="profesionales-modal-search" name="commit" type="submit" value="Buscar"/>
                </div>
  						</form>
  					</div>
  				</div>
  				<hr/>
  				<div class="row">
  					<div class="col-md-12">
  						<table class="table" id="profesionales-list">
  							<thead>
  								<tr>
  									<th></th>
  									<th>Nombre</th>
  									<th>DNI</th>
  									<th>CUIT</th>
  								</tr>
  							</thead>
  							<tbody></tbody>
  						</table>
  					</div>
  				</div>
  			</div>
  			<div class="modal-footer">
  				<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
  				<button id="profesionales-modal-add" type="button" class="btn btn-primary">Asociar</button>
  			</div>
  		</div>
  	</div>
  </div>
{% endblock %}

{% block javascripts %}
  {{parent()}}
  <script src="{{ asset('js/profesionales.js') }}"></script>
{% endblock %}
