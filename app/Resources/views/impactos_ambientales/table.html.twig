<div class="table-responsive">
  <table id="impactos_ambientales" class="table table-striped">
    <thead>
      <tr>
        <th>Aprobado</th>
        <th>Resolución Número</th>
        <th>Fecha</th>
        <th>Observacion</th>
        <th></th>
      </tr>
    </thead>
    <tbody class="impactosAmbientales" data-index="{{ impactosAmbientales|length }}" data-prototype="{% filter escape %}{% include 'impactos_ambientales/prototype.html.twig' with {'form': impactosAmbientales.vars.prototype } %}{% endfilter %}">
      {% if impactosAmbientales %}
        {% for tag in impactosAmbientales %}
        <tr class="fields">
          <td>
          	<div class="col-sm-12">
          		{{ form_widget(tag.aprobado) }}
              {{ form_errors(tag.aprobado) }}
          	</div>
          </td>
          <td>
          	<div class="col-sm-12">
          		{{ form_widget(tag.resolucionNumero) }}
              {{ form_errors(tag.resolucionNumero) }}
          	</div>
          </td>
          <td>
          		<div class="col-sm-12">
          			{{ form_widget(tag.fechaEntrada) }}
                {{ form_errors(tag.fechaEntrada) }}
          		</div>
          </td>
          <td>
          		<div class="col-sm-12">
          			{{ form_widget(tag.observacion) }}
                {{ form_errors(tag.observacion) }}
          		</div>
          </td>
          <td>
          	<a class="btn btn-danger btn-sm pull-right remove-impacto-ambiental remove_nested_fields" data-association="impactos_ambientales">
              <span class="fa fa-remove text-white" aria-hidden="true"></span>
          	</a>
          </td>
        </tr>
      {% endfor %}
    {% endif %}
    </tbody>
  </table>
  <a id="add-impacto-ambiental" class="btn btn-primary btn-sm add_nested_fields" data-target="#impacto-ambiental" href="javascript:void(0)">
    <span class="fa fa-plus" aria-hidden="true"></span>
    Agregar Impacto Ambiental
  </a>
</div>

{% block javascripts %}
  <script src="{{ asset('js/impactos_ambientales.js') }}"></script>
{% endblock %}
