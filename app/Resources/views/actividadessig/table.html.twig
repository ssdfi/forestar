<table id="actividades-sig" class="table table-striped">
  <thead>
    <tr>
      <th>Especie</th>
      <th>Superficie</th>
      <th>Departamento</th>
      <th>Tipo</th>
      <th>Inspeccion ID</th>
      {% if expediente.agrupador  %}
        <th>Titular Agrupador</th>
      {% endif %}
      <th>Observaciones</th>
      <th></th>
    </tr>
  </thead>
  <tbody class="actividadesSig" data-index="{{ actividadesSig|length }}" data-prototype="{% filter escape %}{% include 'actividadessig/prototype.html.twig' with {'form': actividadesSig.vars.prototype } %}{% endfilter %}">
    {% if actividadesSig %}
      {% for key,tag in actividadesSig %}
      <tr class="fields">
        <td>
        	<div class="col-sm-12">
        		{{ form_widget(tag.especie) }}
            {{ form_errors(tag.especie) }}
        	</div>
        </td>
        <td>
        		<div class="col-sm-12">
        			{{ form_widget(tag.superficieHa) }}
              {{ form_errors(tag.superficieHa) }}
        		</div>
        </td>
        <td>
        		<div class="col-sm-12">
        			{{ form_widget(tag.departamento) }}
              {{ form_errors(tag.departamento) }}
        		</div>
        </td>
        <td>
          	<div class="col-sm-12">
        			{{ form_widget(tag.tipoActividad) }}
              {{ form_errors(tag.tipoActividad) }}
        		</div>
        </td>
        <td>
          	<div class="col-sm-12">
        			{{ form_widget(tag.inspeccion) }}
              {{ form_errors(tag.inspeccion) }}
        		</div>
        </td>
        {% if expediente.agrupador == true %}
          <td>
            <div class="form-row">
              <div class="col-md-8 mb-3">
                {{form_widget(tag.titularAgrupado)}}
              </div>
              <div class="col-md-4 mb-3">
                <div class="form-row">
                  <div class="col-md-6">
                    <button id="add-titular-agrupado" data-index='{{key}}' data-name="appbundle_expedientes_actividadesSig_" class="btn btn-default add-titular-agrupado" type="button" data-toggle="modal" data-target="#titular-agrupado-modal">
                      <span class="fa fa-search" aria-hidden="true"></span>
                    </button>
                  </div>
                  <div class="col-md-6">
                    <button id="remove-titular-agrupado" data-index='{{key}}' data-name="appbundle_expedientes_actividadesSig_" class="btn btn-default remove-titular-agrupado" type="button">
                      <span class="fa fa-remove" aria-hidden="true"></span>
                    </button>
                  </div>
                </div>
              </div>
            </div>
            {{form_widget(tag.titular_agrupado_id)}}
          </td>
        {% endif %}
        <td>
        		<div class="col-sm-12">
        			{{ form_widget(tag.observaciones) }}
              {{ form_errors(tag.observaciones) }}
        		</div>
        </td>
        <td>
        	<a class="btn btn-danger btn-sm pull-right remove-actividad-sig remove_nested_fields" data-association="actividades_sig">
            <span class="fa fa-remove text-white" aria-hidden="true"></span>
        	</a>
        </td>
      </tr>
    {% endfor %}
  {% endif %}
  </tbody>
</table>
<a id="add-actividad-sig" class="btn btn-primary btn-sm add_nested_fields" data-target="#actividad-sig" href="javascript:void(0)">
  <span class="fa fa-plus" aria-hidden="true"></span>
  Agregar Actividad SIG
</a>

{% block javascripts %}
  <script src="{{ asset('js/actividades_sig.js') }}"></script>
{% endblock %}
