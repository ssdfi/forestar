{% block stylesheets %}
  {% stylesheets "@bootstrap_css" "@fontawesome_css" %}
  <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
  <link rel="stylesheet" type="text/css" media="screen" href="/css/application.css"/>
  <link rel="stylesheet" type="text/css" media="screen" href="/css/body.css"/>
  <link rel="stylesheet" type="text/css" media="screen" href="/css/bootstrap-switch.css"/>
  <link rel="stylesheet" type="text/css" media="screen" href="/css/bootstrap-combobox.css"/>
  {% endstylesheets %}
  {% stylesheets 'bundles/app/css/*' output = 'css/compiled/main.css' %}
  <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
  {% endstylesheets %}
{% endblock %}
{% block body %}
{% embed "titulares/agrupado_modal_search_form.html.twig" %}
{% endembed %}
{{ form_start(actividadesPresentadasForm, {'attr': {'id': 'form_actividadespresentadas'}}) }}
	<div class="form-group">
		<div class="col-sm-12">
			<label>Tipo</label>
			{{ form_widget(actividadesPresentadasForm.tipoActividad) }}
			{{ form_errors(actividadesPresentadasForm.tipoActividad) }}
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-12">
			<label>Especie</label>
			{{ form_widget(actividadesPresentadasForm.especie) }}
			{{ form_errors(actividadesPresentadasForm.especie) }}
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-12">
			<label>Superficie</label>
			{{ form_widget(actividadesPresentadasForm.superficieHa) }}
			{{ form_errors(actividadesPresentadasForm.superficieHa) }}
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-12">
			<label>Densidad</label>
			{{ form_widget(actividadesPresentadasForm.densidad) }}
			{{ form_errors(actividadesPresentadasForm.densidad) }}
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-12">
			<label>Fecha Realizaci√≥n</label>
			{{ form_widget(actividadesPresentadasForm.fechaRealizacion) }}
			{{ form_errors(actividadesPresentadasForm.fechaRealizacion) }}
		</div>
	</div>
	{% if expediente.agrupador == true %}
  <div class="form-group">
    <div class="col-sm-12">
      <div class="form-row">
        <div class="form-group col-md-10">
          <label>Titular Agrupado</label>
          {{form_widget(actividadesPresentadasForm.titularAgrupado)}}
        </div>
        <div class="form-group col-md-2">
          <label>.</label>
          <div class="form-row">
            <div class="form-group col-md-6">
              <button id="add-titular-agrupado" data-name="appbundle_actividadespresentadas_" class="btn btn-default add-titular-agrupado" type="button" data-toggle="modal" data-target="#titular-agrupado-modal">
                <span class="fa fa-search" aria-hidden="true"></span>
              </button>
            </div>
            <div class="form-group  col-md-6">
              <button id="remove-titular-agrupado" data-name="appbundle_actividadespresentadas_" class="btn btn-default remove-titular-agrupado" type="button">
                <span class="fa fa-remove" aria-hidden="true"></span>
              </button>
            </div>
          </div>
          {{form_widget(actividadesPresentadasForm.titular_agrupado_id)}}
        </div>
      </div>
    </div>
  </div>
	{% endif %}
	{% if expediente.plurianual %}
		<div class="form-group">
			<div class="col-sm-12">
				<label>Etapa</label>
				{{ form_widget(actividadesPresentadasForm.etapa) }}
				{{ form_errors(actividadesPresentadasForm.etapa) }}
			</div>
		</div>
	{% endif %}
	<div class="form-group">
		<div class="col-sm-12">
			<label>Observaciones</label>
			{{ form_widget(actividadesPresentadasForm.observaciones) }}
			{{ form_errors(actividadesPresentadasForm.observaciones) }}
		</div>
	</div>
  {{form_end(actividadesPresentadasForm)}}
{% endblock %}

{% javascripts '@jquery' '@bootstrap_js' %}
<script src="https://npmcdn.com/tether@1.2.4/dist/js/tether.min.js"></script>
<script type="text/javascript" src="{{ asset_url }}"></script>
<script src="/js/bootstrap-switch.js"></script>
<script src="/js/bootstrap-combobox.js"></script>
{% endjavascripts %}
