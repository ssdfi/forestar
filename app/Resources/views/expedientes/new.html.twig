									<div class="row">
										<div class="col-sm-10">
											{{form_widget(form.representanteLegal)}}
										</div>
										<div class="col-sm-2">
											<span class="form-group">
												<button id="add-representante-legal" class="btn btn-default" type="button" data-toggle="modal" data-target="#representante-legal-modal">
													<span class="fa fa-search" aria-hidden="true"></span>
												</button>
												<button id="remove-representante-legal" class="btn btn-default" type="button">
													<span class="fa fa-remove" aria-hidden="true"></span>
												</button>
											</span>
										</div>
									</div>
								</div>
							</div>
							{{form_row(form.fechaPresentacion)}}
							{{form_row(form.fechaIngreso)}}
							{% if form.estado is defined %}
								{{form_row(form.estado)}}
							{% endif %}
							{% if form.estadoAreaContable is defined %}
								{{form_row(form.estadoAreaContable)}}
							{% endif %}
							{% if form.estadoAreaLegales is defined %}
								{{form_row(form.estadoAreaLegales)}}
							{% endif %}
							{% if form.estadoAreaPromocion is defined %}
								{{form_row(form.estadoAreaPromocion)}}
							{% endif %}
							{% if form.estadoAreaSig is defined %}
								{{form_row(form.estadoAreaSig)}}
							{% endif %}
							{% if form.estadoForestoIndustriales is defined %}
								{{form_row(form.estadoForestoIndustriales)}}
							{% endif %}
