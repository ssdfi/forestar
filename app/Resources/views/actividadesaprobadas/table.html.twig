<table id="actividades-aprobadas" class="table table-striped">
  <thead>
    <tr>
      <th>Inspección</th>
      <th>Especie</th>
      <th>Tipo Actividad</th>
      <th>Superficie</th>
      <th>Densidad</th>
      <th>10% Valiosa</th>
      <th>Mat. Certificado</th>
      <th>Mat. de Plantación</th>
      <th>Fecha Realización</th>
      {% if expediente.agrupador  %}
        <th>Titular Agrupador</th>
      {% endif %}
      {% if expediente.plurianual %}
        <th>Etapa</th>
      {% endif %}
      <th>Observaciones</th>
      <th></th>
    </tr>
  </thead>
  <tbody class="actividadesAprobadas" data-index="{{ actividadesAprobadas|length }}" data-prototype="{% filter escape %}{% include 'actividadesaprobadas/prototype.html.twig' with {'form': actividadesAprobadas.vars.prototype } %}{% endfilter %}">
    {% if actividadesAprobadas %}
      {% for key, tag in actividadesAprobadas %}
      <tr class="fields">
        <td>
          <div class="col-sm-12">
            {{ form_widget(tag.inspeccion) }}
            {{ form_errors(tag.inspeccion) }}
          </div>
        </td>
        <td class="especies">
          <div class="col-sm-12">
            {{ form_widget(tag.especie) }}
            {{ form_errors(tag.especie) }}
          </div>
        </td>
        <td class="tipoActividades">
          <div class="col-sm-12">
            {{ form_widget(tag.tipoActividad) }}
            {{ form_errors(tag.tipoActividad) }}
          </div>
        </td>
        <td>
        		<div class="col-sm-12">
        			{{ form_widget(tag.superficieHa) }}
              {{ form_errors(tag.superficieHa) }}
        		</div>
        </td>
        <td>
          <div class="col-sm-12">
            {{ form_widget(tag.densidad) }}
            {{ form_errors(tag.densidad) }}
          </div>
        </td>
        <td>
          <div class="col-sm-3">
            {{ form_widget(tag.valiosas) }}
            {{ form_errors(tag.valiosas) }}
          </div>
        </td>
        <td>
          <div class="col-sm-3">
            {{ form_widget(tag.materialCertificado) }}
            {{ form_errors(tag.materialCertificado) }}
          </div>
        </td>
        <td>
          <div class="col-sm-12">
            {{ form_widget(tag.materialPlantacion) }}
            {{ form_errors(tag.materialPlantacion) }}
          </div>
        </td>
        <td>
        		<div class="col-sm-12">
        			{{ form_widget(tag.fechaInicio) }}
              {{ form_errors(tag.fechaInicio) }}
        		</div>
        </td>
        {% if expediente.agrupador == true %}
          <td>
            <div class="form-row">
              <div class="col-md-8 mb-3">
                {{form_widget(tag.titularAgrupado)}}
              </div>
              <div class="col-md-4 mb-3">
                <div class="form-row">
                  <div class="col-md-6">
                    <button id="add-titular-agrupado" data-index='{{key}}' data-name="appbundle_expedientes_actividadesAprobadas_" class="btn btn-default add-titular-agrupado" type="button" data-toggle="modal" data-target="#titular-agrupado-modal">
                      <span class="fa fa-search" aria-hidden="true"></span>
                    </button>
                  </div>
                  <div class="col-md-6">
                    <button id="remove-titular-agrupado" data-index='{{key}}' data-name="appbundle_expedientes_actividadesAprobadas_" class="btn btn-default remove-titular-agrupado" type="button">
                      <span class="fa fa-remove" aria-hidden="true"></span>
                    </button>
                  </div>
                </div>
              </div>
            </div>
            {{form_widget(tag.titular_agrupado_id)}}
          </td>
        {% endif %}
        {% if expediente.plurianual %}
          <td>
              <div class="col-sm-12">
                {{ form_widget(tag.etapa) }}
                {{ form_errors(tag.etapa) }}
              </div>
          </td>
        {% endif %}
        <td>
        		<div class="col-sm-12">
        			{{ form_widget(tag.observaciones) }}
              {{ form_errors(tag.observaciones) }}
        		</div>
        </td>
        <td>
        	<a class="btn btn-danger btn-sm pull-right remove-actividad-aprobada remove_nested_fields" data-association="actividades_aprobadas">
            <span class="fa fa-remove text-white" aria-hidden="true"></span>
        	</a>
        </td>
      </tr>
    {% endfor %}
  {% endif %}
  </tbody>
</table>
<a id="add-actividad-aprobada" class="btn btn-primary btn-sm add_nested_fields" data-target="#actividad-aprobada" href="javascript:void(0)">
  <span class="fa fa-plus" aria-hidden="true"></span>
  Agregar Actividad Presentada
</a>

{% block javascripts %}
  <script src="{{ asset('js/actividades_aprobadas.js') }}"></script>
{% endblock %}
