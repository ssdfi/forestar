{% extends 'javascripts.html.twig' %}

{% block content %}
<table id="actividades-aprobadas" class="table table-striped">
  <thead>
    <tr>
      <th>Especie</th>
      <th>Superficie</th>
      <th>Densidad</th>
      <th>Inicio</th>
      <th>Fin</th>
      <th>Departamento</th>
      <th>Tipo</th>
      <th>Observaciones</th>
      <th></th>
    </tr>
  </thead>
  <tbody class="actividadesAprobadas" data-index="{{ actividadesAprobadas|length }}" data-prototype="{% filter escape %}{% include 'actividadesaprobadas/prototype.html.twig' with {'form': actividadesAprobadas.vars.prototype } %}{% endfilter %}">
    {% if actividadesAprobadas %}
      {% for tag in actividadesAprobadas %}
      <tr class="fields">
        <td>
        	<div class="col-sm-12">
        		{{ form_row(tag.especie) }}
            {{ form_errors(tag.especie) }}
        	</div>
        </td>
        <td>
        		<div class="col-sm-12">
        			{{ form_row(tag.superficieHa) }}
              {{ form_errors(tag.superficieHa) }}
        		</div>
        </td>
        <td>
          <div class="col-sm-12">
            {{ form_row(tag.densidad) }}
            {{ form_errors(tag.densidad) }}
          </div>
        </td>
        <td>
        		<div class="col-sm-12">
        			{{ form_row(tag.fechaInicio) }}
              {{ form_errors(tag.fechaInicio) }}
        		</div>
        </td>
        <td>
        		<div class="col-sm-12">
        			{{ form_row(tag.fechaFinActividad) }}
              {{ form_errors(tag.fechaFinActividad) }}
        		</div>
        </td>
        <td>
        		<div class="col-sm-12">
        			{{ form_row(tag.departamento) }}
              {{ form_errors(tag.departamento) }}
        		</div>
        </td>
        <td>
          	<div class="col-sm-12">
        			{{ form_row(tag.tipoActividad) }}
              {{ form_errors(tag.tipoActividad) }}
        		</div>
        </td>
        <td>
        		<div class="col-sm-12">
        			{{ form_row(tag.observaciones) }}
              {{ form_errors(tag.observaciones) }}
        		</div>
        </td>
        <td>
        	<a class="btn btn-danger btn-sm pull-right remove-actividad-aprobada remove_nested_fields" data-association="actividades_aprobadas">
            <span class="fa fa-remove text-white" aria-hidden="true"></span>
        	</a>
        </td>
      </tr>
    {% endfor %}
  {% endif %}
  </tbody>
</table>
<a id="add-actividad-aprobada" class="btn btn-primary btn-sm add_nested_fields" data-target="#actividad-aprobada" href="javascript:void(0)">
  <span class="fa fa-plus" aria-hidden="true"></span>
  Agregar Actividad Presentada
</a>
{% endblock %}

{% block javascripts %}
  {{parent()}}
  <script src="{{ asset('js/actividades_aprobadas.js') }}"></script>
{% endblock %}
