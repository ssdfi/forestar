{% extends 'javascripts.html.twig' %}

{% block content %}
<div class="table-responsive">
  <table id="actividades-inspeccionadas" class="table table-striped">
    <thead>
      <tr>
        <th>Especie</th>
        <th>Superficie</th>
        <th>Densidad</th>
        <th>Inicio</th>
        <th>Fin</th>
        <th>Departamento</th>
        <th>Tipo</th>
        <th>Responsable</th>
        <th>Fecha Inspeccion</th>
        <th>Tipo Inspeccion</th>
        <th>Observacion</th>
        <th></th>
      </tr>
    </thead>
    <tbody class="actividadesInspeccionadas" data-index="{{ actividadesInspeccionadas|length }}" data-prototype="{% filter escape %}{% include 'actividadesinspeccionadas/prototype.html.twig' with {'form': actividadesInspeccionadas.vars.prototype } %}{% endfilter %}">
      {% if actividadesInspeccionadas %}
        {% for tag in actividadesInspeccionadas %}
        <tr class="fields">
          <td>
          	<div class="col-sm-12">
          		{{ form_row(tag.especie) }}
              {{ form_errors(tag.especie) }}
          	</div>
          </td>
          <td>
          		<div class="col-sm-12">
          			{{ form_row(tag.superficieHa) }}
                {{ form_errors(tag.superficieHa) }}
          		</div>
          </td>
          <td>
            <div class="col-sm-12">
              {{ form_row(tag.densidad) }}
              {{ form_errors(tag.densidad) }}
            </div>
          </td>
          <td>
          		<div class="col-sm-12">
          			{{ form_row(tag.fechaInicio) }}
                {{ form_errors(tag.fechaInicio) }}
          		</div>
          </td>
          <td>
          		<div class="col-sm-12">
          			{{ form_row(tag.fechaFin) }}
                {{ form_errors(tag.fechaFin) }}
          		</div>
          </td>
          <td>
          		<div class="col-sm-12">
          			{{ form_row(tag.departamento) }}
                {{ form_errors(tag.departamento) }}
          		</div>
          </td>
          <td>
            	<div class="col-sm-12">
          			{{ form_row(tag.tipoActividad) }}
                {{ form_errors(tag.tipoActividad) }}
          		</div>
          </td>
          <td>
              <div class="col-sm-12">
                {{ form_row(tag.responsableId) }}
                {{ form_errors(tag.responsableId) }}
              </div>
          </td>
          <td>
              <div class="col-sm-12">
                {{ form_row(tag.fechaInspeccion) }}
                {{ form_errors(tag.fechaInspeccion) }}
              </div>
          </td>
          <td>
              <div class="col-sm-12">
                {{ form_row(tag.tipoInspeccion) }}
                {{ form_errors(tag.tipoInspeccion) }}
              </div>
          </td>
          <td>
          		<div class="col-sm-12">
          			{{ form_row(tag.observacion) }}
                {{ form_errors(tag.observacion) }}
          		</div>
          </td>
          <td>
          	<a class="btn btn-danger btn-sm pull-right remove-actividad-inspeccionada remove_nested_fields" data-association="actividades_inspeccionadas">
              <span class="fa fa-remove text-white" aria-hidden="true"></span>
          	</a>
          </td>
        </tr>
      {% endfor %}
    {% endif %}
    </tbody>
  </table>
  <a id="add-actividad-inspeccionada" class="btn btn-primary btn-sm add_nested_fields" data-target="#actividad-inspeccionada" href="javascript:void(0)">
    <span class="fa fa-plus" aria-hidden="true"></span>
    Agregar Actividad Inspeccionada
  </a>
</div>
{% endblock %}

{% block javascripts %}
  {{parent()}}
  <script src="{{ asset('js/actividades_inspeccionadas.js') }}"></script>
{% endblock %}
