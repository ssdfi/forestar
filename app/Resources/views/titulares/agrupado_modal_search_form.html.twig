{% extends 'javascripts.html.twig' %}
{% block content %}
  <div id="titular-agrupado-modal" data-backdrop-limit="1" tabindex="-1" class="modal container fade titular-agrupado-modal" aria-labelledby="titular-agrupado-modal-label" aria-hidden="true" role="dialog" data-index="" data-name="">
  	<div id="full-width" class="modal-dialog modal-lg">
  		<div class="modal-content">
  			<div class="modal-header">
  				<h5 class="modal-title" id="titular-agrupado-modal-label">Asociar Titular Agrupado</h5>
  				<button type="button" class="close" data-dismiss="modal">
  					<span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
  			</div>
  			<div class="modal-body">
  				<div class="row">
  					<div class="col-md-12">
  						<form action="{{path('titulares_search')}}" id="agrupado-modal" class="form-inline" data-remote="true" method="get" role="form">
  							<div style="display:none"></div>
                <div class="form-group mx-sm-3 mb-2">
                  <label for="inputPassword2" class="sr-only" for="titular[apellido_nombre]">Titular[apellido_nombre]</label>
                  <input class="form-control" id="titular[apellido_nombre]" name="titular[apellido_nombre]" placeholder="Apellido y Nombre" type="text">
                </div>
                <div class="form-group mx-sm-3 mb-2">
                  <label for="inputPassword2" class="sr-only" for="titular[documento]">Titular[documento]</label>
                  <input class="form-control" id="titular[documento]" name="titular[documento]" placeholder="DNI" type="text">
                </div>
                <div class="form-group mx-sm-3 mb-2">
                  <label for="inputPassword2" class="sr-only" for="titular[cuit]">Titular[cuit]</label>
                  <input class="form-control" id="titular[cuit]" name="titular[cuit]" placeholder="CUIT" type="text">
                </div>
                <div class="form-group mx-sm-3 mb-2">
                  <input class="btn btn-secondary" id="titular-agrupado-modal-search" name="commit" type="submit" value="Buscar"/>
                </div>
  						</form>
  					</div>
  				</div>
  				<hr/>
  				<div class="row">
  					<div class="col-md-12">
  						<table class="table" id="titulares-agrupados-list">
  							<thead>
  								<tr>
  									<th></th>
  									<th>Nombre</th>
  									<th>DNI</th>
  									<th>CUIT</th>
  								</tr>
  							</thead>
  							<tbody></tbody>
  						</table>
  					</div>
  				</div>
  			</div>
  			<div class="modal-footer">
  				<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
  				<button id="titular-agrupado-modal-add" type="button" class="btn btn-primary">Asociar</button>
  			</div>
  		</div>
  	</div>
  </div>
{% endblock %}

{% block javascripts %}
  <script type="text/javascript" src="{{ asset('/assetic/jquery.js') }}"></script>
  <script src="{{ asset('js/titular_agrupado_modal.js') }}"></script>
{% endblock %}
