<div class="table-responsive">
<table id="herbicidas" class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Principio Activo</th>
      <th>Esquema Aplicacion</th>
      <th>Accion</th>
      <th>Dosis</th>
      <th>Período Realización</th>
      <th></th>
    </tr>
  </thead>
  <tbody class="herbicidas" data-index="{{ herbicidas|length }}" data-prototype="{% filter escape %}{% include 'predios/herbicidas/prototype.html.twig' with {'form': herbicidas.vars.prototype } %}{% endfilter %}">
    {% if herbicidas %}
      {% for tag in herbicidas %}
      <tr class="fields">
        <td>
          <div class="col-sm-12">
            {{ form_widget(tag.nombre) }}
            {{ form_errors(tag.nombre) }}
          </div>
        </td>
        <td>
            <div class="col-sm-12">
              {{ form_widget(tag.principioActivo) }}
              {{ form_errors(tag.principioActivo) }}
            </div>
        </td>
        <td>
            <div class="col-sm-12">
              {{ form_widget(tag.esquemaAplicacion) }}
              {{ form_errors(tag.esquemaAplicacion) }}
            </div>
        </td>
        <td>
            <div class="col-sm-12">
              {{ form_widget(tag.accion) }}
              {{ form_errors(tag.accion) }}
            </div>
        </td>
        <td>
            <div class="col-sm-12">
              {{ form_widget(tag.dosis) }}
              {{ form_errors(tag.dosis) }}
            </div>
        </td>
        <td>
            <div class="col-sm-12">
              {{ form_widget(tag.periodoRealizacion) }}
              {{ form_errors(tag.periodoRealizacion) }}
            </div>
        </td>
        <td>
          <a class="btn btn-danger btn-sm pull-right remove-herbicida remove_nested_fields" data-association="herbicidas">
            <span class="fa fa-remove text-white" aria-hidden="true"></span>
          </a>
        </td>
      </tr>
    {% endfor %}
  {% endif %}
  </tbody>
</table>
	<a id="add-herbicida" class="btn btn-primary btn-sm add_nested_fields" data-target="#herbicida" href="javascript:void(0)">
		<span class="fa fa-plus" aria-hidden="true"></span>
		Agregar Herbicidas
	</a>
</div>

{% block javascripts %}
  <script src="{{ asset('js/predios/herbicidas.js') }}"></script>
{% endblock %}
